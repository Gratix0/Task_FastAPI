# Environment: development, testing, production
APP_ENV=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Application host and port
HOST=0.0.0.0
PORT=8000


# DATABASE SETTINGS (PostgreSQL)
# Main database (for docker-compose)
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=task_fastapi_db
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=strong_password_here_change_me

# Database URL (used by Alembic and application)
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# Synchronous database URL (for Alembic migrations)
SYNC_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}


# SECURITY & AUTHENTICATION
# Secret key for JWT tokens
# Generate your own: openssl rand -hex 32
SECRET_KEY=your_super_secret_jwt_key_change_in_production
ALGORITHM=HS256

# Access and refresh token lifetime (in minutes/days)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# DEVELOPMENT & TESTING SETTINGS
# For local development (without Docker)
LOCAL_POSTGRES_SERVER=localhost
LOCAL_POSTGRES_PORT=5432
LOCAL_POSTGRES_DB=task_fastapi_local
LOCAL_POSTGRES_USER=postgres
LOCAL_POSTGRES_PASSWORD=postgres

# Test database
TEST_POSTGRES_SERVER=localhost
TEST_POSTGRES_PORT=5433
TEST_POSTGRES_DB=task_fastapi_test
TEST_POSTGRES_USER=test_user
TEST_POSTGRES_PASSWORD=test_password
